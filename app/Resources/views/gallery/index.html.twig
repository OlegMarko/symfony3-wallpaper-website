{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        {% for item in images %}
            <div class="col-sm-6 col-lg-3 col-md-4">
                <a href="{{ path('view') }}" class="thumbnail">
                    <img src="{{ asset('images') }}/{{ item }}" alt="{{ item }}">
                </a>
            </div>
        {% endfor %}
    </div>

    <div class="navigation">
        {{ knp_pagination_render(images) }}
    </div>

{% endblock %}